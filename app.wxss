page{font-size:30rpx;font-family: arial,"Hiragino Sans GB","Microsoft Yahei","微软雅黑","宋体",Tahoma,Arial,Helvetica,STHeiti;}
.w100{width: 100%;}
.h100{height:100%;}
.w50{width: 50%;}
.w85{width:85%;}
.w33{width:33.3%;}
.w25{width: 25%}
.w20{width: 20%;}
.w16{width: 16.6%;}
.color_white{color:white;}
.flex_center{display: flex;justify-content: center;align-items: center;}
.flex_space_bet{display: flex;justify-content: space-between;align-items: center;flex-flow: wrap;}
.flex_start{display: flex;justify-content: flex-start;align-items: center;}
.flex_start1{display: flex;justify-content: flex-start;}
.flex_start_wrap{display: flex;justify-content: flex-start;flex-flow: wrap;align-items: center;}
.flex_end{display: flex;justify-content: flex-end;}
.w95{width:95%;margin:0 auto;}
.w90{width:90%;margin:0 auto;}
.text_center{text-align: center; }
.onShow{display: block;}
.onHide{display: none;}
.ellipsis1{overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-line-clamp:1;-webkit-box-orient:vertical;}
.ellipsis2{overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;}
.bg_white{background:white;}
.position_relative{position: relative;}
.position_absolute{position: absolute;}
.position_fixed{position: fixed;}
.margin_top{margin-top:20rpx;}
.text_right{text-align: right;}
.overflow{overflow: hidden;}
.margin_right{margin-right:20rpx;}
.unfold{width: 25rpx;height:16rpx;}
.padding{padding:0 20rpx;}
.arrow_l_r{width: 16rpx;height:25rpx;}
.color_red{color:#af2027;}
.doubt{width:50rpx;height:50rpx;right:20rpx; z-index: 5;}
.submit_order{color:white;background:#5b5c78;width:90%;margin:60rpx auto;line-height:88rpx;height:88rpx;border-radius:10rpx;}
.introduce {font-size:32rpx;}
/* 在售车型 */
.models_list{background:#f6f9ff; height:88rpx;line-height: 88rpx;}
.vehicle_info{padding:20rpx;border-top:1px solid #efeff4;border-bottom:1px solid #efeff4;}
.vehicle_info label{color:#af2027;}

.scroll_box{white-space: nowrap;z-index: 6;height:300rpx;width:95%;}
.scroll_box_item{display: inline-block;width: 288rpx;margin-right:20rpx;font-size:28rpx;line-height:50rpx;}
.order_img{height:164rpx;border-radius:10rpx;overflow:hidden;margin-right:20rpx; border:1px solid #efeff4;}
.order text{margin-bottom:40rpx;}
.order{padding-bottom:20rpx;}
.collect view{height:48rpx;font-size:28rpx;margin-bottom:9rpx;}

/* 关闭按钮 */
.close{width:50rpx;height:50rpx;bottom:-90rpx;left:50%;transform:translateX(-50%); overflow:auto;}
.illustrate {font-size:26rpx;line-height:45rpx;letter-spacing: 1rpx;}
.illustrate text{font-size:28rpx;margin-bottom:10rpx;}

/* 遮幕 */
.cover{background:rgba(0,0,0,0.3);width: 100%;height: 100%;z-index:10;top:0px;}
.config_cover{max-height:80%;z-index:10;border-radius:10rpx;left:50%;top:50%;transform: translate(-50%,-50%);width:85%;}
.config_nav{height:80rpx;line-height: 80rpx;border-top:1rpx solid #d2d3d5;}
.config_nav text{width:49%;}
.confirm{color:#af2027;}
.config_cover .config_cont{padding:20rpx; max-height:750rpx;overflow: scroll;}
.config_cover .config_cont::-webkit-scrollbar{display: none;}
.config_picture{width:100%;height:340rpx;border:#5e5e5e 1px solid; margin:20rpx 0;}
.config_cover .parts{width:78%;}
.cover_tit{font-size:34rpx;color:#111;}
.config_cover .price{border-top:1px solid #efeff4;padding:10rpx 0;margin-top:10rpx;}
.carcon{top:516rpx;}
image{max-width: 100%;max-height: 100%;}
.config_tit{background:#f6f9ff;padding:0 20rpx;border:none;font-size:32rpx; height:88rpx;line-height:88rpx;}
.font_bold{font-weight: bold;}

.no_notice{color:#c5c9cc;margin-top:15%;}
.no_notice image{width:150rpx;height:150rpx;margin-bottom:30rpx;}